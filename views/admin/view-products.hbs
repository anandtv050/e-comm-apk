<section><div class="container">
    <div class="row mt-5">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img
                style="width:50px; height:50px;"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              />
            </td>
            <td><a
                href="/admin/edit-product"
                class="btn btn-warning"
              >Edit</a></td>
            <td><a
                href="/admin/delete-product?id={{this._id}} " onclick="return confirm('do you want to delete {{this.name}} ?')" class="btn btn-danger"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div></section>