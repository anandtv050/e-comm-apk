<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Cards</title>
  <!-- Link to Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card {
      margin-bottom: 20px;
    }
    .card-body p {
      font-size: 14px;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      {{#each OrderProduct}}
        <div class="col-md-4">
          <div class="card">
            <img
              style="width:50px; height:50px;"
              src="/product-images/{{this.product._id}}.jpg"
              alt=""
            />
            {{!-- <img src="https://via.placeholder.com/150" class="card-img-top" alt="{{this.product.name}}"> --}}
            <div class="card-body">
              <h5 class="card-title">{{this.product.name}}</h5>
              <p class="card-text">Category: {{this.product.category}}</p>
              <p class="card-text">Description: {{this.product.Description}}</p>
              <p class="card-text text-success">Price: ${{this.product.Price}}</p>
              <p class="card-text">Quantity: {{this.quantity}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  {{!-- <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script> --}}
</body>
</html>
